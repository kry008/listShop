<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="listShop.Elements.Count"
             xmlns:controls="clr-namespace:listShop.Elements">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Button BorderColor="OrangeRed" Text="-" Clicked="ButtonMinus_Clicked" Grid.Column="0"/>
            <Editor TextChanged="getNumber" Keyboard="Numeric" Text="0" x:Name="number" Grid.Column="1" TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
            <Label x:Name="unitLabel" TextColor="Black" Grid.Column="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
            <Button BorderColor="OrangeRed" Text="+" Clicked="ButtonPlus_Clicked" Grid.Column="3"/>
        </Grid>
    </VerticalStackLayout>
</ContentView>
