<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="listShop.Elements.shopListElement"
             xmlns:controls="clr-namespace:listShop.Elements">
    <Border Stroke="#000" StrokeThickness="1">
        <VerticalStackLayout Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label TextColor="Black" Grid.Column="0" x:Name="nameLabel" />
                <Label TextColor="Black" Grid.Column="1" x:Name="amountLabel" VerticalTextAlignment="End"/>
            </Grid>
        </VerticalStackLayout>
    </Border>
</ContentView>
