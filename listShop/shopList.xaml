<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="listShop.shopList"
             Title="shopList">
    <ScrollView BackgroundColor="White" Padding="10">
        <VerticalStackLayout BackgroundColor="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Wróć" Clicked="goBack_Clicked" BackgroundColor="White" TextColor="Black" />
                <Button Text="Udosepnij listę" Clicked="share_Clicked" BackgroundColor="White" TextColor="Black" Grid.Column="1" />
            </Grid>
            <Label TextColor="Black" Text="Lista zakupów" VerticalOptions="Center" HorizontalOptions="Center" />
            <VerticalStackLayout x:Name="elements">
                
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>